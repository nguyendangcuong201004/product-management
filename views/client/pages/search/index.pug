extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.mt-5
        .row 
            .col-xl-12 
                +box-head(`Kết quả tìm kiếm cho ${keyword}`)
        
        .row 
            each item in products
                .col-xl-4.mb-3 
                    .product-item   
                        .inner-image 
                            a(href=`/products/detail/${item.slug}`)
                                img(src=item.thumbnail, alt=item.title)
                        .inner-content 
                            h3.inner-title
                                a(href=`/products/detail/${item.slug}` style="text-decoration: none") #{item.title}
                            .inner-price-new #{Math.round(item.price - item.price * item.discountPercentage / 100)}$
                            .inner-price-old #{item.price}$
                            .inner-discount -#{item.discountPercentage}%