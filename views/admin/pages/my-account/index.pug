extends ../../layouts/default.pug

block main 
    h1.mb-4 Thông tin cá nhân

    if(user.avatar)
        img(src=user.avatar width="300px" class="mb-3")
    else 
        img(src="/admim/images/avatar.png" width="300px" class="mb-3")
    if(user.fullName)
        div(class="mb-3") Họ và tên: <b>#{user.fullName}</b>
    if(user.email)
        div(class="mb-3") Eamil: <b>#{user.email}</b>
    if(user.phone)
        div(class="mb-3") Số điện thoại: <b>#{user.phone}</b>
    if(user.status)
        div(class="mb-3") Trạng thái: <b>#{user.status == "active" ? "Hoạt động" : "Dừng hoạt động"}</b>
    if(user.role_id)
        div(class="mb-3") Phân quyền: <b>#{role.title}</b>
    a(
        href=`${prefixAdmin}/my-account/edit`
        class="btn btn-primary"
    ) Chỉnh sửa thông tin